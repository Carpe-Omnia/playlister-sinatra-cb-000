<h3> Here's the genre </h3>
<%= @genre.name %><br>
In This Genre:
<ul>
<% @genre.songs.each do |song| %>
  <li>
    <a href= <%= "/songs/#{slugify(song.name)}" %> >
     <%= song.name %>
   </a>
     by
     <a href= <%= "/artists/#{slugify(song.artist.name)}" %> >
        <%= song.artist.name %>
     </a>
   </li>
<% end %>
</ul>
